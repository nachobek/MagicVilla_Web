@model IEnumerable<MagicVilla_Web.Models.Dto.VillaReadDTO>

<div class="p-2"></div>

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Villa List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Villa" asp-action="CreateVilla" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Create New Villa</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Occupancy</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Occupancy
                    </td>
                    <td>
                        @item.Rate.ToString("c")
                    </td>
                    <td>
                        <a asp-controller="Villa" asp-action="UpdateVilla" asp-route-villaId="@item.Id" class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i></a>
                        @*<button type="button" class="btn btn-outline-danger bi bi-trash-fill" data-toggle="modal" data-target="#exampleModal"></button>*@
                        <a asp-controller="Villa" asp-action="DeleteVilla" asp-route-villaId="@item.Id" class="btn btn-outline-danger" data-toggle="modal" data-target="#exampleModal"><i class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


