@model MagicVilla_Web.Models.Dto.VillaNumberCreateDTO

<div class="p-2"></div>

<div class="container p-4 border">
    <h1 class="text-primary">Create Villa Number</h1>

    <hr />

    <form asp-action="CreateVillaNumber">
        <div class="row pt-2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="@Model.VillaNo" class="form-label" style="font-size: 20px">Villa Number</label>
            </div>
            <div class="col-10">
                <input asp-for="@Model.VillaNo" class="form-control" />
                <span asp-validation-for="VillaNo" class="text-danger"></span>
            </div>
        </div>

        <div class="row pt-2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="SpecialDetails" class="form-label" style="font-size: 20px">Special Details</label>
            </div>
            <div class="col-10">
                <input asp-for="SpecialDetails" class="form-control" />
                <span asp-validation-for="SpecialDetails" class="text-danger"></span>
            </div>
        </div>

        <div class="row pt-2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label class="form-label" style="font-size: 20px">Villa Name</label>
            </div>
            <div class="col-10">
                @Html.DropDownList("VillaId", (IEnumerable<SelectListItem>)ViewData["VillaNameDropdown"], new { @class = "form-select" })
                <span asp-validation-for="VillaId" class="text-danger"></span>
            </div>
        </div>

        <div class="row pt-2">
            <div class="col-5 offset-2 pt-2">
                <a asp-action="IndexVillaNumber" class="btn-primary btn form-control">Back to list</a>
            </div>

            <div class="col-5 pt-2">
                <input type="submit" value="Create Villa Number" class="btn btn-success form-control" />
            </div>
        </div>
    </form>
</div>